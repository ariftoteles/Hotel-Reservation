<%- include('partials/header', {title: "Reservation List"});-%>
<%- include('partials/navbar');-%>

<h2>Daftar Pesanan Hotel</h2>
<table class="table table-striped table-bordered booking-list">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Hotel</th>
            <th scope="col">Kota</th>
            <th scope="col">Check In</th>
            <th scope="col">Check Out</th>
            <th scope="col">Kamar</th>
            <th scope="col">Harga</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        <% data.forEach((el, indx) => { %>
            <tr>
                <td><%= indx+1%></td>
                <td><a href="/hotels/<%= el.Hotel.id%>"><%= el.Hotel.name%> </a></td>
                <td><%= el.Hotel.city%></td>
                <td><%= convertDate(el.checkIn)%></td>
                <td><%= convertDate(el.checkOut)%></td>
                <td><%= el.totalRoom%></td>
                <td><%= el.formatRupiah()%></td>
                <td>
                    <a href="/customers/reservation/edit/<%= el.id%>" class="btn btn-info btn-sm" tabindex="-1" role="button">Ubah</a>
                    <a href="/customers/reservation/delete/<%= el.id%>" class="btn btn-info btn-sm" tabindex="-1" role="button">Batalkan</a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<%- include('partials/footer');-%>